const input = prompt("Введите значение:");

const number = +input;
if (isNaN(number)) {
  console.log("Упс, кажется, вы ошиблись");
} else if (typeof number === "number") {
  if (isNaN(number)) {
    console.log("Введено значение NaN");
  } else if (number % 2 === 0) {
    console.log("Число чётное");
  } else {
    console.log("Число нечётное");
  }
}
