// factorial.js
function factorial(n) {
  if (typeof n !== 'number') {
    throw new Error("Входное значение должно быть числом.");
  }

  if (n < 0) {
    throw new Error("Факториал не определен для отрицательных чисел.");
  }

  if (n === 0 || n === 1) {
    return 1;
  }

  return n * factorial(n - 1);
}

module.exports = factorial;
